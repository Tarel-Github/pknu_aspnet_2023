@model Portfolio.Models.TempPortfolioWebModel

@{
    ViewData["Title"] = "Create";

}

<div class="content-wrapper">
        <h1>새로운 웹 포트폴리오 작성</h1>
        <div class="card-body">


        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create" enctype="multipart/form-data" class="forms-sample">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group" hidden>
                        <label asp-for="Id" class="control-label"></label>
                        <input asp-for="Id" class="form-control" />
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Url" class="control-label"></label>
                        <input asp-for="Url" class="form-control" />
                        <span asp-validation-for="Url" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label>파일 업로드</label>


                        <label asp-for="PortfolioImage" class="control-label"></label>
                        <input asp-for="PortfolioImage" class="form-control" type="file" accept=".png, .jpg, .jpeg" />
                        <span asp-validation-for="PortfolioImage" class="text-danger"></span>


