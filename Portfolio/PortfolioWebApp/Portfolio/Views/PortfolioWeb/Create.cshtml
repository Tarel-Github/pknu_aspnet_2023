                          <span class="input-group-append">
                            <button class="file-upload-browse btn btn-primary" type="button">업로드</button>
                          </span>
                        </div>*@


                      </div>


                    <div class="form-group">
                        <input type="submit" value="생성하기" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>

