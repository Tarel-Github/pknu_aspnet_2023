@model Portfolio.Models.LoginModel

@{
    ViewData["Title"] = "로그인";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="row w-100 m-0">
            <div class="content-wrapper full-page-wrapper d-flex align-items-center auth login-bg">
                <div class="card col-lg-4 mx-auto">
                    <div class="card-body px-5 py-5">
                        <h3 class="card-title text-left mb-3">로그인</h3>
                        <form asp-action="Login">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group">
                                <label>이메일 *</label>
                                <input asp-for="Email" type="text" placeholder="name@example.com" type="text" class="form-control p_input">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>암호 *</label>
                                <input asp-for="Password" type="password" class="form-control p_input" placeholder="Password">
                                <span asp-validation-for="Password" class="text-danger"></span>

                            </div>

                            <div class="checkbox m-3">
                                <label asp-for="RememberMe">
                                    <input type="checkbox" value="Remember-Me" class="form-check-inline">
                                    @Html.DisplayNameFor(m => m.RememberMe)
                                </label>
                            </div>

                            <div class="text-center">
                                <button type="submit" class="btn btn-primary btn-block enter-btn">로그인</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- row ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>