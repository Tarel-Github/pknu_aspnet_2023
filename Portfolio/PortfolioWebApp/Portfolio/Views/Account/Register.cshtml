@model Portfolio.Models.RegisterModel

@{
    ViewData["Title"] = "회원가입";
}

<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="row w-100 m-0">
            <div class="content-wrapper full-page-wrapper d-flex align-items-center auth login-bg">
                <div class="card col-lg-4 mx-auto">
                    <div class="card-body px-5 py-5">
                        <h3 class="card-title text-left mb-3">회원가입</h3>
                        <form asp-action="Register">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label>이메일</label>
                                <input asp-for="Email" type="email" class="form-control p_input" placeholder="name@example.com">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>닉네임</label>
                                <input asp-for="Nickname" type="text" class="form-control p_input" placeholder="MyName">
                                <span asp-validation-for="Nickname" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>암호</label>
                                <input asp-for="Password" type="password" class="form-control p_input" placeholder="Password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>암호 재확인</label>
                                <input asp-for="ConfirmPassword" type="password" class="form-control p_input" placeholder="ConfirmPassword">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>

                            <div class="text-center">
                                <button type="submit" class="btn btn-primary btn-block enter-btn">회원가입</button>
                            </div>

                            <p class="sign-up text-center">계정이 이미 있다면<a href="#"></br>로그인</a></p>

                        </form>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- row ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>

